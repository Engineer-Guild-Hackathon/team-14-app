{
  "name": "codeclimb-pc-client",
  "version": "1.0.0",
  "description": "CodeClimb PC Client - Desktop Learning Companion",
  "main": "dist/main/index.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run build:backend\" \"npm run dev:vite\" \"npm run electron:dev\"",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "build:backend": "concurrently \"npm run build:main\" \"npm run build:preload\"",
    "dev:vite": "vite",
    "build:watch": "concurrently \"npm run build:main\" \"npm run build:preload\" \"vite build --watch\"",
    "electron:dev": "wait-on dist/main/index.js dist/preload/index.js && sleep 3 && cross-env NODE_ENV=development electron .",
    "electron:pack": "electron-builder",
    "electron:dist": "npm run build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "chokidar": "^3.5.3",
    "date-fns": "^2.30.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4",
    "simple-git": "^3.20.0",
    "socket.io-client": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.1",
    "cross-env": "^10.0.0",
    "electron": "^26.2.2",
    "electron-builder": "^24.6.4",
    "eslint": "^8.48.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.29",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.46.1",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.15.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-electron": "^0.14.1",
    "wait-on": "^7.0.1",
    "zustand": "^4.4.1"
  },
  "build": {
    "appId": "com.team14.codeclimb",
    "productName": "CodeClimb",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      }
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "learning",
    "programming"
  ],
  "author": "Team 14",
  "license": "MIT"
}
